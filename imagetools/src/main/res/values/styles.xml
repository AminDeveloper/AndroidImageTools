<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <!--text view with label styles-->
    <style name="text_view_lable">
        <item name="android:textSize">12dp</item>

        <item name="android:background">@null</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_input">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:theme">@style/EditTextTM</item>


        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:textCursorDrawable">@drawable/curser</item>-->
        <item name="android:imeOptions">actionNext</item>
        <!--<item name="android:maxLines">1</item>-->

    </style>

    <style name="EditTextTM" parent="Base.Widget.AppCompat.EditText">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>

        <!--<item name="colorControlHighlight">@color/colorPrimaryDark</item>-->
        <!--<item name="android:colorPressedHighlight">@color/colorPrimaryDark</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorPrimary">@color/colorPrimaryDark</item>-->
        <!--<item name="colorControlActivated">@color/colorPrimaryDark</item>-->

    </style>

    <style name="text_layout">
        <item name="android:layout_margin">5dp</item>

        <item name="android:background">@color/white</item>
        <item name="android:weightSum">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="radio_button">
        <!--<item name="android:buttonTint">@color/colorPrimary</item>-->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/MRadioButton</item>
        <!--<item name="android:textAppearance">@color/drawer_item</item>-->
        <!--<item name="android:textColorHighlight">@color/colorPrimaryDark</item>-->
        <!--<item name="android:textColorLink">@color/colorPrimary</item>-->

    </style>

    <style name="MRadioButton" parent="radio_button">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>

        <!--<item name="colorControlHighlight">@color/colorPrimaryDark</item>-->
        <!--<item name="android:colorPressedHighlight">@color/colorPrimaryDark</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorPrimary">@color/colorPrimaryDark</item>-->
        <!--<item name="colorControlActivated">@color/colorPrimaryDark</item>-->

    </style>

    <style name="spinner">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:theme">@style/MRadioButton</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="spinner_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>

    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
     Animation for dialog box
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

//dialog base
    <style name="FadeInAnimateDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/FadeInDialogAnimation</item>
    </style>

    <style name="FadeInDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>


    <style name="DialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>
